\newkomafont{chapternumber}{\usekomafont{disposition}%
	\IfUsePrefixLine{\usekomafont{chapterprefix}}{\usekomafont{chapter}}%
	\color{black}\fontsize{50}{60}\selectfont% (only testing)
}%
\addtokomafont{chapter}{\color{black}}% (only testing)
\addtokomafont{chapterprefix}{\color{black}}% (only testing)
\newkomafont{chapterline}{\color{black}}% (only testing)
\renewcommand\chapterlinesformat[3]{%
	\begingroup\usekomafont{chapterline}%
	\Ifstr{#2}{}{%
		\rule{\textwidth}{4\rulewidth}%
	}{%
		\rule{0.5\textwidth}{4\rulewidth}{#2}%
	}%
	\endgroup\par\nobreak%
	#3%
	\par\nobreak%
	\begingroup\usekomafont{chapterline}\rule{\textwidth}{4\rulewidth}\endgroup%
}%
\renewcommand*{\chapterformat}{%
	\mbox{%
		\usekomafont{chapterprefix}\chapappifchapterprefix{\nobreakspace}%
		\usekomafont{chapternumber}\thechapter\autodot%
		\usekomafont{chapter}\IfUsePrefixLine{}{\enskip}%
	}%
}%
