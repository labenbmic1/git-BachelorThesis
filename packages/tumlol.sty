\ProvidesExplPackage {packages/tumlol} {\TUMversiondate} {\TUMversion}%
	{The list-of-listings-part made by Michael Labenbacher}%
\ProcessKeysPackageOptions{packages/tumlol}%
\ExplSyntaxOff%
%% ================================== LOL-names ===================================
\makeatletter%
\AtBeginDocument{%
	\TUM@ifpackageloaded[setting]{babel}{%
		\AfterEndPreamble{%
			\TUM@addto@extras@renew{american,english}{lstlistlistingname}{List of Listings}%
			\TUM@addto@extras@renew{naustrian,ngerman}{lstlistlistingname}{Listingverzeichnis}%
		}%
	}{}%
}%
\makeatother%
%% ========================== Definition of the TUM-LOL ===========================
\NewDocumentCommand{\TUMlistoflistings}{}{%
	\newpage%
	\pagestyle{scrheadings}%
	\lstlistoflistings%
	\newpage%
}%
\makeatletter%
\TUM@ifpackageloaded[setting]{microtype}{%
	\pretocmd{\TUMlistoflistings}{\newpage\microtypesetup{protrusion=false}}{}{}%
	\apptocmd{\TUMlistoflistings}{\microtypesetup{protrusion=true}\newpage}{}{}%
}{}%
\makeatother%
