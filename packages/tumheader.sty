\NeedsTeXFormat{LaTeX2e}%
\ProvidesExplPackage {packages/tumheader} {\TUMversiondate} {\TUMversion}%
	{The header-part made by Michael Labenbacher}%
\ProcessKeysPackageOptions{packages/tumheader}%
\ExplSyntaxOff%
%% ============================ Defintion of head/foot ============================
\makeatletter%
\def\responsible#1{\gdef\@responsible{\protect{#1}}}%
\let\@responsible\relax%
\def\chapterpagestyle{empty}%
\KOMAoptions{headsepline=\rulewidth:\textwidth}%
\KOMAoptions{footsepline=\rulewidth:\textwidth}%
\KOMAoptions{footsepline=false}%
\KOMAoptions{headsepline=false}%
\KOMAoptions{plainfootsepline=false}%
\KOMAoptions{plainheadsepline=false}%
\def\settumheadings%
{%
	\if@twoside%
		\automark[section]{chapter}%
	\else%
		\automark{chapter}%
	\fi%
	%% To ensure that the pagenumber and the text do not overlap, "exclude" pagenumber from header
	\KOMAoptions{headwidth=\dimexpr \textwidth-2em:0pt}%
	\lehead*[]{\makebox[0pt][r]{\makebox[2em][l]{\usekomafont{pagenumber}{\thepage}}}}%
	%\lehead*[]{\color{\TUMcolor{5}}\pagemark}%
	\cehead*[]{}%
	\rehead*[]{\color{\TUMcolor{header}}\headmark}%
	\lohead*[]{\color{\TUMcolor{header}}\headmark}%
	\cohead*[]{}%
	\rohead*[]{\makebox[0pt][l]{\makebox[2em][r]{\usekomafont{pagenumber}{\thepage}}}}%
	%\rohead*[]{\color{\TUMcolor{5}}\pagemark}%
	\lefoot*[]{}%
	\cefoot*[]{}%
	\refoot*[]{\color{\TUMcolor{footer}}\@responsible}%
	\lofoot*[]{\color{\TUMcolor{footer}}\@responsible}%
	\cofoot*[]{}%
	\rofoot*[]{}%
	\addtokomafont{headsepline}{\color{\TUMcolor{headline}}}%
	\addtokomafont{footsepline}{\color{\TUMcolor{footline}}}%
	\addtokomafont{pagenumber}{\color{\TUMcolor{header}}\normalfont\rmfamily}%
	\addtokomafont{pagehead}{\color{\TUMcolor{header}}\normalfont\rmfamily}%
	\addtokomafont{pagefoot}{\color{\TUMcolor{footer}}\normalfont\rmfamily}%
	\KOMAoptions{footsepline=false}%
	\KOMAoptions{headsepline=false}%
	\KOMAoptions{plainfootsepline=false}%
	\KOMAoptions{plainheadsepline=false}%
}%
\makeatother%
\endinput%
